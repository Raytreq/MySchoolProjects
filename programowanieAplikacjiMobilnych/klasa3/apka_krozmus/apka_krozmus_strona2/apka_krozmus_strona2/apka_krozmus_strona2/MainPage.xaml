<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apka_krozmus_strona2.MainPage"
             BackgroundColor="white">

    <StackLayout>
        <Label Text="nyc_photographer" TextColor="black" FontSize="18" Margin="15"/>
        <Image Source="https://loremflickr.com/cache/resized/65535_52243575149_59717782e2_h_1280_720_nofilter.jpg"/>

        <StackLayout Orientation="Horizontal">
            <Label Text="Like" TextColor="#05c2fc" FontSize="16" Margin="14,16"/>
            <Label Text="Comment" TextColor="#05c2fc" FontSize="16" Margin="10,16"/>
            <Label Text="Share" TextColor="#05c2fc" FontSize="16" Margin="10,16"/>
        </StackLayout>

        <BoxView HorizontalOptions="FillAndExpand" Color="white" HeightRequest="1"/>
        <Label Text="700 likes" TextColor="black" FontSize="20" FontAttributes="Bold" Margin="10,0,0,0"/>
        <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark." TextColor="#545454" FontSize="18" Margin="10,0,0,0"/>
    </StackLayout>

    
</ContentPage>
